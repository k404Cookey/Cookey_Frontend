<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="50dp"
    android:orientation="vertical"
    tools:context=".navigation.mypage.SettingActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/ib_setting_back"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="0dp"
            android:background="@color/bglogin"
            android:src="@drawable/arrow_back_black_24dp"
            android:scaleType="fitStart"
            android:adjustViewBounds="true"
            android:padding="15dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="설정"
            android:gravity="center_horizontal|top"
            android:textSize="23sp"
            android:textColor="@color/navtext"
            android:fontFamily="@font/binggraebold" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="29dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView4"
            style="@style/FontBody2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:textColor="@color/navtext"
            android:fontFamily="@font/coree5"
            android:textSize="20sp"

            android:drawablePadding= "10dp"
            android:text="알람설정" />

        <TextView
            android:id="@+id/tv_change_profile"
            style="@style/FontBody2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:textColor="@color/navtext"
            android:fontFamily="@font/coree5"
            android:textSize="20sp"
            android:text="프로필 사진 변경" />

        <TextView
            android:id="@+id/tv_logout"
            style="@style/FontBody2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:textColor="@color/navtext"
            android:fontFamily="@font/coree5"
            android:textSize="20sp"
            android:text="로그아웃" />

        <TextView
            android:id="@+id/tv_exit"
            style="@style/FontBody2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:textColor="@color/navtext"
            android:fontFamily="@font/coree5"
            android:textSize="20sp"
            android:text="회원탈퇴" />
    </LinearLayout>
</LinearLayout>