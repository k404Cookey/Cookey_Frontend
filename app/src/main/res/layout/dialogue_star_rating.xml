<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/ratingbar_background"
    android:gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이 레시피는 몇 점짜리 레시피인가요?"
        android:fontFamily="@font/coree5"
        android:textSize="18dp"
        android:layout_marginVertical="20dp"/>
    <!--
        RatingBar 속성 :
        numStars : 별개수 설정
    -->

    <RatingBar
        android:id="@+id/ratingbar_dialogue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:layout_marginBottom="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/round_left_button"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/coree5"
            android:textSize="18dp"
            android:text="나중에 할래요"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_ok"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/round_right_button"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/coree5"
            android:textSize="18dp"
            android:text="확 인"/>

    </LinearLayout>
</LinearLayout>